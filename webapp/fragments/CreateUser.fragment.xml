<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="createUserDialog"
        title="Create User"
        showHeader="false"
    >
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm
                    id="SimpleFormChangeUser"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="Create User"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <Label
                            text="User Type"
                            required="true"
                        />
                        <RadioButtonGroup
                            id="rbg3"
                            columns="3" select="onRBGSelect"
                        >
                            <RadioButton
                                id="RB3-1"
                                text="Customer"
                            />
                            <RadioButton
                                id="RB3-2"
                                text="Franchisee"
                            />
                        </RadioButtonGroup>
                        <Label
                            text="Reference"
                            required="true"
                        />
                        <Input
                            id="inputValueHelpUser"
                            placeholder="Select Reference"
                            showValueHelp="true"
                            valueHelpOnly="true"
                            valueHelpRequest="handleValueHelpUser"
                            value="{createModel>/refid}"
                        />
                        <Label text="Name" required="true"/>
                        <Input
                            value="{createModel>/firstname}"
                            placeholder="First Name"
                        />
                        <Input
                            value="{createModel>/lastname}"
                            placeholder="Last Name"
                        />
                        <Label
                            text="Email Id"
                            required="true"
                        />
                        <Input
                            type="Email"
                            placeholder="Email Id"
                            value="{createModel>/email}"
                        />
                        <Label
                            text="Mobile Number"
                            required="true"
                        />
                        <Input
                            type="Tel"
                            placeholder="Mobile Number"
                            value="{createModel>/phnum}"
                            maxLength="10"
                        />
                        <Label
                            text="Password"
                            required="true"
                        />
                        <Input
                            type="Password"
                            id="inputPassword"
                            placeholder="Password"
                            value="{createModel>/password}"
                        />
                        <Label
                            text="Confirm Password"
                            required="true"
                        />
                        <Input
                            type="Password"
                            id="inputConfirmPassword"
                            placeholder="Confirm Password"
                            value="{createModel>/confirmpassword}"
                        />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <beginButton>
            <Button
                type="Emphasized"
                text="Submit"
                press=".onSubmitDialog"
            />
        </beginButton>
        <endButton>
            <Button
                type="Reject"
                text="Cancel"
                press=".onCancelDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
