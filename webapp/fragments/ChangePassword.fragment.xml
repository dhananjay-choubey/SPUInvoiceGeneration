<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="changePasswordrDialog"
        title="Change Password"
        showHeader="false"
    >
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm
                    id="SimpleFormChangePassword"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="Change Password"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <Label text="" />
                        <ToggleButton id="showPassword"
                            icon="sap-icon://show"
                            type="Accept"
                            text="Show Password"
                            press="onShowPassword"
                        />
                        <Label text="Password" />
                        <Input
                            id="password"
                            value="{itemModel>/password}"
                            placeholder="Password"
                            type="Password"
                        />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <beginButton>
            <Button
                type="Emphasized"
                text="Submit"
                press=".onSubmitPasswordDialog"
            />
        </beginButton>
        <endButton>
            <Button
                type="Reject"
                text="Cancel"
                press=".onCancelPasswordDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
