<mvc:View
    controllerName="com.ifb.invoicegenerator.controller.MaterialDetails"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page showHeader="true">
        <headerContent>
            <core:Fragment
                fragmentName='com.ifb.invoicegenerator.fragments.Menu'
                type='XML'
            />
        </headerContent>
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm
                    id="SimpleFormDisplayMaterial"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    title="Material"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <Label text="Product ID" />
                        <Text text="{MaterialDetailModel>/ProductId}" />
                        <Label text="Product Desc." />
                        <Text
                            text="{MaterialDetailModel>/ProductDescription}"
                        />
                        <Label text="Material Category" />
                        <Text text="{MaterialDetailModel>/MaterialCategory}" />
                        <Label text="Category Hierarchy ID" />
                        <Text
                            text="{MaterialDetailModel>/CategoryHierarchyID}"
                        />
                        <Label text="Tax Tariff Code" />
                        <Text text="{MaterialDetailModel>/TaxTariffCode}" />
                        <Label text="Tax Type" />
                        <Text text="{MaterialDetailModel>/TaxType}" />
                        <Label text="Units of Measure of Product" />
                        <Text text="{MaterialDetailModel>/UOM}" />
                        <Label text="Group ID" />
                        <Text text="{MaterialDetailModel>/GroupId}" />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
    </Page>
</mvc:View>
