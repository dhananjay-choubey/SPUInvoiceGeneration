<mvc:View
    controllerName="com.ifb.invoicegenerator.controller.MaterialDetails"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page showHeader="true"
    class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer">
        <headerContent>
            <core:Fragment
                fragmentName='com.ifb.invoicegenerator.fragments.Menu'
                type='XML'
            />
        </headerContent>
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm
                    id="SimpleFormDisplayMaterial"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    title="Material"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                <f:toolbar>
                	<Toolbar>
					<Title text="Material"/>
					<ToolbarSpacer />
					<Button text="Deactivate" icon="sap-icon://cancel"
                        visible="{= (${LoginDataModel>/usertype} === 'A') ? true : false }" press="onDeactivateMaterial"/>
				</Toolbar>
                </f:toolbar>
                    <f:content>
                        <Label text="Product ID" />
                        <Text text="{MaterialDetailModel>/materialcode}" />
                        <Label text="Product Desc." />
                        <Text
                            text="{MaterialDetailModel>/materialdesc}"
                        />
                        <Label text="Material Category" />
                        <Text text="{MaterialDetailModel>/materialcat}" />
                        <Label text="Category Hierarchy ID" />
                        <Text
                            text="{MaterialDetailModel>/categoryhierarchyid}"
                        />
                        <Label text="Tax Tariff Code" />
                        <Text text="{MaterialDetailModel>/taxtariffcode}" />
                        <Label text="Tax Type" />
                        <Text text="{MaterialDetailModel>/taxtype}" />
                        <Label text="Units of Measure of Product" />
                        <Text text="{MaterialDetailModel>/uom}" />
                        <Label text="Group ID" />
                        <Text text="{MaterialDetailModel>/groupid}" />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
    </Page>
</mvc:View>
