<mvc:View
    controllerName="com.ifb.invoicegenerator.controller.Users"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        showHeader="true"
        backgroundDesign="Transparent"  showNavButton="true" navButtonPress=".onNavBack"
        class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
    >
        <headerContent>
            <core:Fragment
                fragmentName='com.ifb.invoicegenerator.fragments.Menu'
                type='XML'
            />
        </headerContent>
        <content>
            <Table
                id="idUsersTable"
                inset="false"
                items="{path : 'UserModel>/'}"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title
                                text="Users"
                                level="H2"
                            />
                            <ToolbarSpacer />
                            <Button
                                text="Create User"
                                type="Transparent"
                                icon="sap-icon://create"
                                press="handleCreatePress"
                            />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column demandPopin="true">
                        <Text text="Name" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="User Type" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="User Status" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <Text text="Email ID" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <Text text="Phone No." />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Region" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Branch Code" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        hAlign="Left"
                    >
                        <Text text="Change Password / Deactivate" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier
                                title="{UserModel>firstname} {UserModel>lastname}"
                                text="{UserModel>refid}"
                            />
                            <Text
                                text="{path:'UserModel>usertype',formatter: '.formatter.getUserType'}"
                            />
                            <ObjectStatus class="sapUiSmallMarginBottom" text="{path:'UserModel>isactive',formatter: '.formatter.getUserStatus'}"
			                    icon="{path:'UserModel>isactive',formatter: '.formatter.getUserStatusIcon'}"
                                 state="{path:'UserModel>isactive',formatter: '.formatter.getUserStatusState'}" />
                            <Text text="{UserModel>email}" />
                            <Text text="{UserModel>phnum}" />
                            <Text text="{UserModel>region_desc} ({UserModel>regioncode})" />
                            <Text
                                text="{UserModel>branchcode}"
                            />
                            <HBox>
                                <core:Icon
                                    visible="{path:'UserModel>isactive',formatter: '.formatter.setIconVisibility'}"
                                    src="sap-icon://show"
                                    class="sapUiSmallMarginEnd"
                                    press="handleChangePassword"
                                />
                                <core:Icon
                                    visible="{path:'UserModel>isactive',formatter: '.formatter.setIconVisibility'}"
                                    src="sap-icon://cancel"
                                    class="sapUiSmallMarginBeginEnd"
                                    press="handleDeactivateUser"
                                />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
