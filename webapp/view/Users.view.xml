<mvc:View
    controllerName="com.ifb.invoicegenerator.controller.Users"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        showHeader="true"
        backgroundDesign="Transparent"
    >
        <headerContent>
            <core:Fragment
                fragmentName='com.ifb.invoicegenerator.fragments.Menu'
                type='XML'
            />
        </headerContent>
        <content>
            <Table
                id="idUsersTable"
                inset="false"
                items="{path : 'UserModel>/Users'}"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title
                                text="Users"
                                level="H2"
                            />
                            <ToolbarSpacer />
                            <Button
                                text="Create User"
                                type="Transparent"
                                icon="sap-icon://create"
                                press="handleCreatePress"
                            />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column demandPopin="true">
                        <Text text="Name" />
                    </Column>
                    <Column
                        width="12em"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="User Type" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <Text text="Email ID" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <Text text="Phone No." />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Region" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Branch (Segment)" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        hAlign="Left"
                    >
                        <Text text="Change Password / Deactivate" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier
                                title="{UserModel>firstname} {UserModel>lastname}"
                                text="{UserModel>refid}"
                            />
                            <Text
                                text="{path:'UserModel>usertype',formatter: '.formatter.getUserType'}"
                            />
                            <Text text="{UserModel>email}" />
                            <Text text="{UserModel>phnum}" />
                            <Text text="{UserModel>region}" />
                            <Text
                                text="{UserModel>branchdesc} ({UserModel>segment})"
                            />
                            <HBox>
                                <core:Icon
                                    src="sap-icon://show"
                                    class="sapUiSmallMarginEnd"
                                    press="handleChangePassword"
                                />
                                <core:Icon
                                    src="sap-icon://cancel"
                                    class="sapUiSmallMarginBeginEnd"
                                    press="handleDeactivateUser"
                                />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
