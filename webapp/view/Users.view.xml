<mvc:View
    controllerName="com.ifb.invoicegenerator.controller.Users"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        showHeader="false"
        backgroundDesign="Transparent"
        title="Users"
    >
        <content>
            <Table
                id="idUsersTable"
                inset="false"
                items="{path : 'UserModel>/Users'}"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title
                                text="Users"
                                level="H2"
                            />
                            <ToolbarSpacer />
                            <Button
                                text="Create User"
                                type="Transparent"
                                icon="sap-icon://create"
                                press="handleCreatePress"
                            />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        demandPopin="true"
                    >
                        <Text text="Name" />
                    </Column>
                    <Column width="12em">
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <Text text="Email ID" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <Text text="Phone No." />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Region" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Branch (Segment)" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        hAlign="Center"
                    >
                        <Text text="Change Password" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier
                                title="{UserModel>firstname} {UserModel>lastname}"
                                text="{UserModel>refid}"
                            />
                            <Text text="{path:'UserModel>usertype',formatter: '.formatter.getUserType'}" />
                            <Text text="{UserModel>email}" />
                            <Text text="{UserModel>phnum}" />
                            <Text text="{UserModel>region}" />
                            <Text text="{UserModel>branchdesc} ({UserModel>segment})" />
                            <core:Icon
                                src="sap-icon://show"
                                class="sapUiSmallMarginEnd"
                                press="handleChangePassword"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
