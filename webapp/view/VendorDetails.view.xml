<mvc:View
    controllerName="com.ifb.invoicegenerator.controller.VendorDetails"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page showHeader="true">
        <headerContent>
            <core:Fragment
                fragmentName='com.ifb.invoicegenerator.fragments.Menu'
                type='XML'
            />
        </headerContent>
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm
                    id="SimpleFormDisplayVendor"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    title="Franchisee"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <Label text="Vendor" />
                        <Text
                            text="{VendorDetailModel>/VendorName} ({VendorDetailModel>/VendorCode})"
                        />
                        <Label text="Vendor Address" />
                        <Text text="{VendorDetailModel>/VendorAdress}" />
                        <Label text="Branch" />
                        <Text
                            text="{VendorDetailModel>/BranchName} ({VendorDetailModel>/BranchCode})"
                        />
                        <Label text="GSTN" />
                        <Text text="{VendorDetailModel>/GSTN}" />
                        <Label text="PAN" />
                        <Text text="{VendorDetailModel>/PAN}" />
                        <Label text="Mobile Number" />
                        <Text text="{VendorDetailModel>/MobileNumber}" />
                        <Label text="Email ID" />
                        <Text text="{VendorDetailModel>/EmailID}" />
                        <Label text="Pin Code" />
                        <Text text="{VendorDetailModel>/PinCode}" />
                        <Label text="GSTN Registration Type" />
                        <Text text="{VendorDetailModel>/GSTNRegType}" />
                        <Label text="Effective Date" />
                        <Text text="{VendorDetailModel>/EffectiveDate}" />
                        <Label text="State" />
                        <Text text="{VendorDetailModel>/State}" />
                        <Label text="Region Code" />
                        <Text text="{VendorDetailModel>/RegionCode}" />
                        <Label text="City" />
                        <Text text="{VendorDetailModel>/City}" />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
    </Page>
</mvc:View>
