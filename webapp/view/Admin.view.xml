<mvc:View
    controllerName="com.ifb.invoicegenerator.controller.Admin"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page
        showHeader="true"
        backgroundDesign="Transparent"
        title="Admin Overview"
    >
        <headerContent>
            <core:Fragment
                fragmentName='com.ifb.invoicegenerator.fragments.Menu'
                type='XML'
            />
        </headerContent>
        <content>
            <GenericTile
                visible="{= (${LoginDataModel>/usertype} === 'A' || ${LoginDataModel>/usertype} === 'C') ? true : false }"
                class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                header="Materials"
                press="onMaterialPress"
            >
                <TileContent>
                    <ImageContent src="sap-icon://product" />
                </TileContent>
            </GenericTile>
            <GenericTile
                visible="{= (${LoginDataModel>/usertype} === 'A' || ${LoginDataModel>/usertype} === 'V') ? true : false }"
                class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                header="{= (${LoginDataModel>/usertype} === 'V') ? 'My Branch' : 'Customers' }"
                press="onBranchUserPress"
            >
                <TileContent>
                    <ImageContent src="sap-icon://company-view" />
                </TileContent>
            </GenericTile>
            <GenericTile
                visible="{= (${LoginDataModel>/usertype} === 'A' || ${LoginDataModel>/usertype} === 'C') ? true : false }"
                class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                header="Franchisee"
                press="onFranchiseePress"
            >
                <TileContent>
                    <ImageContent src="sap-icon://customer" />
                </TileContent>
            </GenericTile>
            <GenericTile
                visible="{= (${LoginDataModel>/usertype} === 'A') ? true : false }"
                class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                header="App Users"
                press="onAppUsersPress"
            >
                <TileContent>
                    <ImageContent src="sap-icon://employee" />
                </TileContent>
            </GenericTile>
        </content>
    </Page>
</mvc:View>
