<mvc:View
    controllerName="com.ifb.invoicegenerator.controller.CustomerDetails"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page showHeader="true">
        <headerContent>
            <core:Fragment
                fragmentName='com.ifb.invoicegenerator.fragments.Menu'
                type='XML'
            />
        </headerContent>

        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm
                    id="SimpleFormDisplayCustomer"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    title="Customer"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <Label text="Branch" />
                        <Text
                            text="{CustomerDetailModel>/BranchName} ({CustomerDetailModel>/BranchCode})"
                        />
                        <Label text="Customer Address" />
                        <Text text="{CustomerDetailModel>/Address}" />
                        <Label text="Pin Code" />
                        <Text text="{CustomerDetailModel>/PinCode}" />
                        <Label text="GSTN Number" />
                        <Text text="{CustomerDetailModel>/GSTNNumber}" />
                        <Label text="PAN" />
                        <Text text="{CustomerDetailModel>/PAN}" />
                        <Label text="Mobile Number" />
                        <Text text="{CustomerDetailModel>/MobileNumber}" />
                        <Label text="Email ID" />
                        <Text text="{CustomerDetailModel>/EmailId}" />
                        <Label text="Region" />
                        <Text
                            text="{CustomerDetailModel>/RegionDesc} ({CustomerDetailModel>/RegionCode})"
                        />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
    </Page>
</mvc:View>
