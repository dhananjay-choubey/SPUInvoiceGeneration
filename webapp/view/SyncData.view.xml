<mvc:View
    controllerName="com.ifb.invoicegenerator.controller.SyncData"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <Page
        showHeader="true"
        backgroundDesign="Transparent"
        title="Sync Data for Invoice Generation"
        showNavButton="true" navButtonPress=".onNavBack"
    >
        <headerContent>
            <core:Fragment
                fragmentName='com.ifb.invoicegenerator.fragments.Menu'
                type='XML'
            />
        </headerContent>
        <content>
            <f:SimpleForm
                minWidth="1024"
                maxContainerCols="2"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanL="5"
                labelSpanM="5"
                emptySpanL="4"
                emptySpanM="1"
                columnsL="2"
                columnsM="2"
            >
                <f:content>
                    <Label
                        text="Start Date"
                        required="true"
                        design="Bold"
                    />
                    <DatePicker id="idStartDate" />
                    <Label
                        text="End Date"
                        required="true"
                        design="Bold"
                    />
                    <DatePicker id="idEndDate" />
                    <Label />
                    <Button
                        text="Sync Records"
                        icon="sap-icon://synchronize"
                        press="onSyncPress"
                        type="Emphasized"
                    />
                </f:content>
            </f:SimpleForm>
            <MessageStrip
                text="Last Data was synced on 18-08-2023"
                type="Warning"
                showIcon="true"
                customIcon="sap-icon://information"
                class="sapUiSmallMarginTopBottom"
            />
        </content>
    </Page>
</mvc:View>
